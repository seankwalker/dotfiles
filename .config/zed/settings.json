// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  // AI
  "agent": {
    "default_profile": "write",
    "default_model": {
      "provider": "anthropic",
      "model": "claude-opus-4-thinking-latest"
    },
    "model_parameters": [],
    "always_allow_tool_actions": true,
    "version": "2",
    "dock": "left"
  },
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "show_edit_predictions": true,

  // Visual
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "ui_font_family": "JetBrains Mono",
  "buffer_font_family": "JetBrains Mono",
  "theme": {
    "mode": "system",
    "light": "Ariake Dark",
    "dark": "Ariake Dark"
  },
  "experimental.theme_overrides": {
    // "editor.background": "#2a2b30",
    "text": "#f5faff",
    "editor.line_number": "#51518e",
    "editor.active_line_number": "#dda2f6"
  },
  "tab_bar": {
    "show": false
  },
  "gutter": {
    "line_numbers": true,
    "breakpoints": false,
    "folds": false,
    "runnables": false,
    "min_line_number_digits": 0
  },
  "project_panel": {
    "dock": "right",
    "auto_fold_dirs": true,
    "entry_spacing": "standard"
  },
  "git_panel": {
    "button": false,
    "dock": null
  },
  "outline_panel": {
    "button": false,
    "dock": null
  },
  "collaboration_panel": {
    "button": false,
    "dock": null
  },
  "chat_panel": {
    "button": "never",
    "dock": null
  },
  "terminal": {
    "button": false,
    "dock": null
  },
  "search": {
    "button": false
  },
  "diagnostics": {
    "button": false
  },
  "calls": {
    "mute_on_join": true,
    "share_on_join": false
  },

  // vim
  "vim_mode": true,
  "vim": {
    "toggle_relative_line_numbers": true,
    "use_system_clipboard": "never"
  },
  "scrollbar": {
    "show": "never"
  },
  "cursor_blink": false,

  "telemetry": {
    "diagnostics": false,
    "metrics": false
  }
}
